{
    "manifest_version": 2,

    "name": "Lookup",
    "description": "This extension helps you to lookup anything in Wikipedia , Dict.cc or Arch Linux Wiki without interrupting your browsing experience.",
    "options_page": "options.html",
    "version": "0.65.0",
    "permissions": [
        "activeTab",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",

    "icons": {
        "16": "icons/logo.png",
        "19": "icons/logo.png",
        "256": "icons/logo.png"
    },

    "browser_action": {
        "default_icon": "icons/logo.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": [
                "http://*/",
                "https://*/"
            ],
            "js": ["content-script.js"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],

    "background": {
        "scripts": ["event-page.js"],
        "persistent": false
    }
}
