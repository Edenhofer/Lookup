{
  "manifest_version": 2,

  "name": "Lookup",
  "description": "This extension helps you to lookup anything in wikipedia or Arch Linux without interrupting your browsing experience.",
  "options_page": "options.html",
  "version": "0.9",

  "icons": {
    "16": "logo.png",
    "19": "logo.png",
    "256": "logo.png"
  },
  
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
  	"storage",
  	"https://*/*",
  	"http://*/*"
  ],
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
