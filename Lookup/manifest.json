{
  "manifest_version": 2,

  "name": "Lookup",
  "description": "This extension helps you to lookup anything in Wikipedia , Dict.cc or Arch Linux Wiki without interrupting your browsing experience.",
  "options_page": "options.html",
  "version": "0.60.0",

  "icons": {
    "16": "icons/logo.png",
    "19": "icons/logo.png",
    "256": "icons/logo.png"
  },

  "background": {
    "scripts": ["event-page.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
          "http://*/",
          "https://*/"
      ],
      "js": ["content-script.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/logo.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "http://*/",
    "https://*/"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
